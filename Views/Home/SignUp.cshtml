@model MvcRehber2.Models.user

@{
    ViewData["Title"] = "SingUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

<form class="form-horizontal" method="post" action="~/Home/SignUp">

    <div class="form-group">
        @Html.LabelFor(x => x.userName)
        @Html.TextBoxFor(x => x.userName, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.password)
        @Html.TextBoxFor(x => x.password, null, new { @class = "form-control", Type = "password" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.passwordControl)
        @Html.TextBoxFor(x => x.passwordControl, null, new { @class = "form-control", Type = "password" })
    </div>
    <p />
    <div>
        <input type="submit" class="btn btn-primary" value="Kaydet" />
    </div>
</form>