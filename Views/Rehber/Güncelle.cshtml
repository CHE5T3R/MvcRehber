@model Rehber.Models.rehberModel.rehberGüncelleViewModel

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("Güncelle", "Rehber", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @* <form class="form-horizontal" method="post" action="~/Rehber/Güncelle">*@

    @Html.HiddenFor(x => x.rehber.Id)
    <div class="form-group">
        @*<label>Name</label>
            <input type="text" class= "form-control" name="name"/>
            @Html.Label("Name")
            @Html.TextBox("name", null, new { @class = "Form-control" }) *@
        @Html.LabelFor(x => x.rehber.name)
        @Html.TextBoxFor(x => x.rehber.name, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.rehber.surname)
        @Html.TextBoxFor(x => x.rehber.surname, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.rehber.phoneNumber)
        @Html.TextBoxFor(x => x.rehber.phoneNumber, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.rehber.email)
        @Html.TextBoxFor(x => x.rehber.email, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.rehber.adres)
        @Html.TextBoxFor(x => x.rehber.adres, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.rehber.sehirId)
        @Html.DropDownListFor(x => x.rehber.sehirId, new SelectList(Model.sehirs, "Id", "sehirName"), new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />
}